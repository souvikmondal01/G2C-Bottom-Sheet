<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/v_one"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:background="@color/blue20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_ssa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Standard Service Addons"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/v_one"
        app:layout_constraintEnd_toEndOf="@id/v_one"
        app:layout_constraintStart_toStartOf="@id/v_one"
        app:layout_constraintTop_toTopOf="@id/v_one"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Engine Oil"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/v_one"
        app:layout_constraintEnd_toEndOf="@id/v_one"
        app:layout_constraintStart_toStartOf="@id/v_one"
        app:layout_constraintTop_toBottomOf="@id/tv_ssa"
        app:layout_constraintVertical_bias=".2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/v_one" />

    <View
        android:id="@+id/v_two"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginTop="16dp"
        android:background="@color/blue20"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rv_data" />

    <TextView
        android:id="@+id/tv_pac"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="People also choose"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@id/v_two"
        app:layout_constraintEnd_toEndOf="@id/v_two"
        app:layout_constraintStart_toStartOf="@id/v_two"
        app:layout_constraintTop_toTopOf="@id/v_two"
        app:layout_constraintVertical_bias=".3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="For extra mileage"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@id/v_two"
        app:layout_constraintEnd_toEndOf="@id/v_two"
        app:layout_constraintStart_toStartOf="@id/v_two"
        app:layout_constraintTop_toBottomOf="@id/tv_pac"
        app:layout_constraintVertical_bias=".2" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_people_also_choose"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/v_two" />


</androidx.constraintlayout.widget.ConstraintLayout>